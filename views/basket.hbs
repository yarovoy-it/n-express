<h1>Basket</h1>
<div id="basket">
    {{#if courses.length}}
        <table>
            <thead>
            <tr>
                <th>Name</th>
                <th>Count</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {{#each courses}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{count}}</td>
                    <td>
                        <button
                                class="btn btn-small js-remove"
                                data-id="{{id}}"
                                data-csrf="{{@root.csrf}}"
                        >
                            Delete
                        </button>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>

        <p><strong>Price <span class="price">{{price}}</span></strong></p>

        <form action="/orders" method="post">
            <input name="_csrf" type="hidden" value="{{csrf}}">
            <button type="submit" class="btn">Create order</button>
        </form>
    {{else}}
        <p>Basket is empty !!!</p>
    {{/if}}
</div>
