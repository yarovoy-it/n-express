<h1>Add</h1>

{{#if error}}
    <p class="alert">{{error}}</p>
{{/if}}

<form action="/add" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required value="{{data.title}}">
        <label for="title">Course name</label>
        <span class="helper-text" data-error="wrong name"></span>

    </div>

    <div class="input-field">
        <input id="price" name="price"  type="number" class="validate" required value="{{data.price}}" min="1" >
        <label for="price">Price</label>
        <span class="helper-text" data-error="enter price"></span>
    </div>

    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required value="{{data.img}}">
        <label for="img">URL image </label>
        <span class="helper-text" data-error="enter url"></span>
    </div>
    <input  name="_csrf" type="hidden" value="{{csrf}}">
    <button class="btn btn-primary">Submit</button>
</form>
